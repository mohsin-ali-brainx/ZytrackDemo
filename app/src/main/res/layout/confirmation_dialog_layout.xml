<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_dialog_bg"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_16"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/padding_4"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/black_color"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/padding_4"
        android:paddingVertical="@dimen/padding_8"
        android:text="Message"
        android:textAlignment="center"
        android:textColor="@color/black_color"
        android:textSize="@dimen/text_size_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:maxLines="3"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/message_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_25"
        >
        <TextView
            android:id="@+id/no_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_14"
            android:paddingVertical="@dimen/padding_16"
            android:text="@string/no"
            android:layout_gravity="center"
            android:textColor="@color/grey_text_color_60"
            android:fontFamily="@font/brownstd_bold"
            android:textAlignment="center"
            android:background="@drawable/left_cornerd_dialog_button"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/light_border_color"
            />
        <TextView
            android:id="@+id/yes_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_14"
            android:paddingVertical="@dimen/padding_16"
            android:text="@string/yes"
            android:layout_gravity="center"
            android:fontFamily="@font/brownstd_bold"
            android:textColor="@color/theme_color"
            android:textAlignment="center"
            android:background="@drawable/right_conered_dialog_button"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>